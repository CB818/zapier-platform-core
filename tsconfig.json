{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir": "src",
        "outDir": "lib",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "./src/**/*"
    ]
}
